# RaisaTrade AutoTrading Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Pionex API Configuration
PIONEX_API_KEY=your_pionex_api_key_here
PIONEX_SECRET_KEY=your_pionex_secret_key_here

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# Flask Configuration
SECRET_KEY=your_secure_flask_secret_key_here
ENVIRONMENT=production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO

# Optional: Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
